
<!DOCTYPE html>
<html>
    <head>
        <%= render "common/head" %>
    </head>

    <body>

        <div class="container-fluid">
            <div class="row">
              <%= render "common/navbar" %>
            </div>
            <%= render "common/flashes" %>
            <div class="row">

              <div class="col-md-2">
                <% if current_user && current_user.admin? %>
                  <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                      <li><%= link_to("Admin", admin_jobs_path ) %> </li>
                  </ul>
                <% end %>
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                    <li class="active"><%= link_to("Jobs", jobs_path ) %> </li>
                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
           </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
