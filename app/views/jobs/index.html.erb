<div class="col-md-12">
  <div class="job">
    <%= link_to("New job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.updated_at %></td>
          <% if current_user %>
            <td>
                <%= link_to("Welcome", welcome_index_path, class: "btn btn-sm btn-default")%>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
