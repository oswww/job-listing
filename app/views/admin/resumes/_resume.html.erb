<style>
.resume-card-square.mdl-card {
  width: 320px;
  height: 320px;
}
.resume-card-square > .mdl-card__title {
  color: #795548;
  background:
    url('/images/dog.png') bottom right 15% no-repeat #46B6AC;
}
</style>

<div class="mdl-grid">
  <div class="col-center">

    <div class="resume-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text"><%= resume.user.email %></h2>
      </div>
      <div class="mdl-card__supporting-text">
        <%= simple_format(resume.content) %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <% if resume.attachment.present? %>
          <%= link_to("Download Resume", resume.attachment_url,
              class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
          <i class="material-icons" style="vertical-align: text-top">attachment</i>
          <div class="mdl-layout-spacer"></div>
        <% else %>
           No Attachment
        <% end %>

      </div>
    </div>

  </div>
</div>
