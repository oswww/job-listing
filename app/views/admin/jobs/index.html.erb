<div class="col-md-12">
  <div class="job">
    <%= link_to("New job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-boldered table-striped custab" >
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Description </th>
        <th> Resume Count </th>
        <th> Wage </th>
        <th> Admin Crol </th>
        <th> Last Update </th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td> # </td>
          <td> <%= render_job_status(job) %> <%= link_to(job.title, admin_job_path(job)) %> </td>
          <td> <%= job.description %> </td>
          <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
          <td> <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </td>
          <% if current_user && current_user.admin? %>
            <td>
                <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-xs btn-info")%>
                <%= link_to("Delete", admin_job_path(job),    class: "btn btn-xs btn-danger",
                            method: :delete, data: { confirm: "Are you sure?" } )%>
                <% if job.is_hidden %>
                  <%= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
                <% else %>
                  <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning") %>
                <% end %>
            </td>
          <% end %>
          <td> <%= job.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
