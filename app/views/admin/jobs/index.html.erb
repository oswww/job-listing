<div class="col-md-12">
  <div class="job">
    <%= link_to("New job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, admin_job_path(job)) %></td>
          <td><%= job.description %></td>
          <td> <%= job.updated_at %> </td>
          <% if current_user && current_user.admin? %>
            <td>
                <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default")%>
                <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default",
                            method: :delete, data: { confirm: "Are you sure?" } )%>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
